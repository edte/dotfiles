{
    "mcpServers": {
        "sequential-thinking": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-sequential-thinking"
            ]
        },
        "neovim": {
            "command": "/opt/homebrew/bin/neovim-mcp",
            "env": {
                "NVIM_MCP_LISTEN_ADDRESS": "/tmp/nvim.sock"
            }
        },
        "context7": {
            "command": "npx",
            "args": [
                "-y",
                "@upstash/context7-mcp@latest"
            ]
        }
    }
}
