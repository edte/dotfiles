[http]
	sslVersion = tlsv1.2

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true    # use n and N to move between diff sections
    side-by-side = true
    line-numbers = true
    true-color = always

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
[log]
	date = iso-strict-local
[credential]
	helper = store
[submodule]
	recurse = true
